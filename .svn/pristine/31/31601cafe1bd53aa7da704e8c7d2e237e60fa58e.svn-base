#secondary-navigation
{
	position: fixed;
	left: 50px;
	bottom: 50px;
	color: white;
	z-index: 9999;
	background: rgba(0,0,0,.5);
	opacity: 0;

	transition: all .7s;
	-webkit-transition: all .7s;
	-moz-transition: all .7s;
}

#secondary-navigation:hover
{
	opacity: 1;
}

#secondary-navigation.visible
{
	opacity: 1;
}

