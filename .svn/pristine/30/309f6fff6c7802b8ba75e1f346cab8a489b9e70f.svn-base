#overlay {
    position: fixed;
    width: 100%;
    height: 100%;
    visibility: hidden;
    top: 0;
    left: 0;
    z-index: 9999;
    opacity: 0;
    background:#ffffff;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
}

#overlay a.close {
    width:3%;
    height:auto;
    display:block;
    position:absolute;
    z-index:2014;
    top:3%;
    right:1.8%;
    background:transparent;
    color:transparent;
    text-decoration:none;
    border:none;
}

#overlay a.close img {
    width:100%;
    height:auto;
    margin:0;
    padding:0;
}