    display:block;
    border-bottom:1px solid #0d5cbf;
    margin:0 0 0.5em;
}
.grid-item .back .inner p a.crystal {
    background:transparent;
    color:transparent;
    text-decoration:none;
    border:none;
}
.grid-item .back .inner p a.crystal {
    background:transparent;
    color:transparent;
    text-decoration:none;
    border:none;
}
