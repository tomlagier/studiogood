 #modal.show, #overlay.show {
    opacity: 1;
    visibility: visible;
}
#overlay {
    position: fixed;
    width: 100%;
    height: 100%;
    visibility: hidden;
    top: 0;
    left: 0;
    z-index: 9999;
    opacity: 0;
    background:#ffffff;
    /*cursor:pointer;*/
}
a.close {
    width: 30px;
    height: 40px;
    display: block;
    position: fixed;
    z-index: 10000000000;
    top: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    padding: 5px 3px 1px 3px;
    border: 1px solid #2ba6cb;
}
a.close img {
    width:100%;
    height:auto;
    margin:0;
    padding:0;
}
.profiles-heading, .portfolio-heading {
    margin-top: 4em;
}
.fade-text {
    transition: all 2s;
    -webkit-transition: all 2s;
    -moz-transition: all 2s;
    text-align: center;
    position: absolute;
    width: 100%;
    top: 50px;
}
.fade-text h1 {
    font-size: 5.5em;
}
.fade-text.fadeIn {
    opacity: 1;
}
.fade-text.fadeOut {
    opacity: 0;
}
.portfolio-entries {
    position: relative;
}
.grid-item {
    cursor: pointer;
}
.grid-item .front {
    border:1px solid #6e6e6e;
    color:#fdfdfd;
    display:block;
    height:auto;
}
.grid-item .front .inner img.profile-pic {
    width:100%;
    height:100%;
    display:block;
}
.grid-item .front .inner {
    background:#0d5cbf;
}
.grid-item .back {
