.clear {
    width:1px;
    height:0;
    line-height:0;
    background:transparent;
    border:none;
    margin:0;
    padding:0;
    clear:both;
}
body {
    padding-top:1px;
    top: -1px;
}
.profiles .grid-container .grid-item, .portfolio-entries .grid-container .grid-item {
    height:350px;
    perspective: 1000;
    transition: all .7s;
    -webkit-transition: all .7s;
    -moz-transition: all .7s;
    padding: 1em;
    margin-bottom: 45px;
}
.grid-item .hidden {
    opacity: 0;
}
.grid-item-inner {
    width: 100%;
    height: 100%;
    padding: 1.4em;
}
.card-inner {
    position: relative;
    width: 100%;
    height: 100%;
}
.grid-item-inner .caption {
    padding: 1em;
    background: black;
    width: 100%;
    color: white;
    height: 80px;
}
.caption .name {
    color: white;
    border-bottom: 1px solid white;
    padding-bottom: 3px;
    margin-bottom: 3px;
}
.caption .title {
    font-size: 90%;
}
.grid-item:first-child {
    padding-top: 0 !important;
}
.grid-item:last-child {
    padding-bottom: 0 !important;
}
.grid-item .front .inner {
    /*background: blue;*/
    width: 100%;
    height: 100%;
}
.grid-item .back .inner {
    /*background: green;*/
    width: 100%;
    height: 100%;
}
#people-tiles {
    padding: 20px 0;
}
#modal {
    background:transparent;
    /*max-width: 630px;
    min-width: 320px;*/
    height: auto;
    z-index: 10000;
    visibility: hidden;
    border:none;
    opacity: 0;
}
.modal-pic {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 99999;
    padding: 0;
    background-size: cover;
    height: 300px;
}

#modal .content {
    position: absolute;
    z-index: 999999;
    top: 300px;
    padding: 1em;
    width: 100%;
}

@media (min-width: 767px)
{
    .modal-pic
    {
        height: 450px;
    }

    #modal .content
    {
        top: 450px;
    }
}

#modal h1 {
    font-family:'Pathway Gothic One', "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
    color:#000;
    text-align:left;
    font-size:4em;
    line-height:1;
    margin: 0 0 .1em 0;
    padding: 0 0 .1em 0;
    width:100%;
    #0d5cbf;
    display:block;
    border-bottom: 1px solid #0d5cbf;
}
span.blue {
    color:#0d5cbf;
}
#modal .employee-title {
    font-size: 1.5em;
}
#modal h4 {
    color: #0d5cbf;
    margin: .1em 0;
}
#modal .info-section {
    margin: 0 0 .8em 0;
}
#modal .info-section:last-child {
    margin: 0;
}
#modal .info-area {
    margin: 2em 0;
    background: #eee;
    padding: 1em;
    opacity: inherit;
}
#modal a {
    color: #6e6e6e;
}
#modal a:hover {
    text-decoration: none;
    color: #0d5cbf;
}
#modal .socials {
    font-family:'Cardo', "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
    color:#6e6e6e;
    font-size:1.2em;
}
#modal .socials strong {
    font-family:'Pathway Gothic One', "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
    color:#0d5cbf;
    font-size:2em;
    line-height:1.5;
}
#modal .socials span {
    font-family:'Pathway Gothic One', "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
    color:#0d5cbf;
    font-weight:bold;
    font-size:1.1em;
}
#modal .socials img.social {
    border-radius:0.4em;
    margin:0 0 0.5em;
}
