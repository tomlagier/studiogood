<script>
	$('.filter').on('click touchstart', function(){
		if(!$(this).hasClass('active')){
			$('.filter').removeClass('active');
			$(this).addClass('active');
			sortFlipCards('work-for-good');
			setupFlipCards();

			var target = $(this).attr('id');

			setTimeout(function(){
				showText(target);
			}, 100);
		}
	});

	function showText(target)
	{
		var el = $('#' + target + '-text');

		el.show();

		setTimeout(function(){
			el.addClass('fadeOut');
			setTimeout(function(){
				el.removeClass('fadeOut');
				el.hide();
			}, 2000);
		}, 1500);
