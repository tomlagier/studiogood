#home-video-player{
	position: absolute;
}

#home-video-wrapper{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

#video-overlay{
	margin-top: 4em;
}

.title-upper .alt-h{
	width: 13em;
}

.alt-h.left{
	text-align:left;
}

.alt-h.right{
	text-align: right;
}

@media (max-width: 767px){
	.headline{
		font-size: 80px;
		letter-spacing: 5px;
	}
}

.title-lower{
	padding-top: 6em;
}

#navigation{
	top: 50px;
}

#home-logo{
	width: 100px;
	display: block;
	z-index: 100;
	position: relative;
	left: 50%;
	margin-left: -50px;
	top: 103px;
}

