#home-video-player{
	position: absolute;
}

#home-video-wrapper{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

#video-overlay{
	margin-top: 4em;
}

.title-upper .alt-h{
	width: 13em;
}

.alt-h.left{
	text-align:left;
}

.alt-h.right{
	text-align: right;
}

@media (max-width: 767px){
	.headline{
		font-size: 80px;
		letter-spacing: 5px;
	}
}

.title-lower{
	padding-top: 6em;
}

#navigation{
	top: 50px;
}

#home-logo{
	width: 100px;
	display: block;
	z-index: 100;
	position: relative;
	left: 50%;
	margin-left: -50px;
	top: 103px;
}

.btn{
	border-color: #0d5cbf;
}

.btn:hover{
	background: #0d5cbf;	
}

.btn:hover h6{
	color: white;
}

#loader{
	top: 0;
}

.page-title .line
{
	background: #777;
}

.icon, .stat .icon
{
	color: #0d5cbf;

}

.service-text h1{
	font-size: 1.75rem;
}

.icon, .services .icon, .line .icon{
	color: #0d5cbf;
}

strong{
	color: #0d5cbf;	
}

.copy-text{
	width: 20em;
}

#contact .icon{
	color: white;
}

#contact .btn{
	border-color: white;
}

.cover-bg .slider-bg
{
	position: absolute;
	top: 0;
	width: 100%;
}

#case-studies
{
	position: relative;
}

.flex-direction-nav .flex-prev
{
	left: 50px;
}

.flex-direction-nav .flex-next
{
	right: 50px;
}

.flex-direction-nav a
{
	opacity: 1;
	color: white;
	height: 60px;
}

.content-box
{
	background: rgba(0,0,0,.5);
	color: white;
	position: absolute;
	padding: 1.5em !important;
	max-width: 300px;
	top: auto;
}

.content-box h4
{
	color: white;
	font-weight: bold;
}

.content-box.bottom
{
	bottom: 125px;
}

.content-box.top
{
	top: 125px;
}

.content-box.left
{
	left: 125px;
}

.content-box.right
{
	right: 125px;
}

@media (max-width: 767px){
	.content-box
	{
		bottom: 0 !important;
		width: 100% !important;
		left: 0 !important;
		right: 0 !important;
	}
}

#pizza-image, #pizza-image .icon
{
	background: #777;
}

#pizza-image h1
{
	color: white;
}

#pizza-image .line
{
	background: white;
}

#pizza-image .subline
{
	color: white;
}

.pizza-image
{
	padding-bottom: 2em;
}