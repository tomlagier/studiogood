.clear {width:1px;height:0;line-height:0;background:transparent;border:none;margin:0;padding:0;clear:both;}
#grid-item-wrapper
{

}

.profiles #grid-wrapper .grid-item
{
	height: 300px;
	perspective: 1000;
	transition: all .7s;
	-webkit-transition: all .7s;
	-moz-transition: all .7s;
}

.grid-item .hidden
{
	opacity: 0;
}

.grid-item-inner
{
	width: 100%;
	height: 100%;
}

.grid-item .front .inner
{
	/*background: blue;*/
	width: 100%;
	height: 100%;
}

.grid-item .back .inner
{
	/*background: green;*/
	width: 100%;
	height: 100%;
}

#modal {
	position: fixed;
	top: 50%;
	left: 50%;
	width: 75%;
	background:transparent;
	/*max-width: 630px;
	min-width: 320px;*/
	height: auto;
	z-index: 10000;
	visibility: hidden;
	-webkit-backface-visibility: hidden;
	-moz-backface-visibility: hidden;
	backface-visibility: hidden;
	-webkit-transform: translateX(-50%) translateY(-50%);
	-moz-transform: translateX(-50%) translateY(-50%);
	-ms-transform: translateX(-50%) translateY(-50%);
	transform: translateX(-50%) translateY(-50%);
	border:none;
}

#modal img.profile-pic {position:relative;top:0;left:0;z-index:2001;float:left;margin:0;padding:0;border:1px solid #0d5cbf;}
#modal .content {padding:0 1%;}
#modal h1 {font-family:'Pathway Gothic One',"Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;color:#000;text-align:left;font-size:4em;line-height:1;margin:0;width:100%;display:block;border-bottom:3px solid #0d5cbf;}
#modal h1 span.blue {color:#0d5cbf;}
#modal p {font-family:'Cardo',"Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;color:#6e6e6e;font-size:1.2em;}
#modal p strong {font-family:'Pathway Gothic One',"Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;color:#0d5cbf;font-size:2em;line-height:1.5;}
#modal p span {font-family:'Pathway Gothic One',"Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;color:#0d5cbf;font-weight:bold;font-size:1.1em;}
#modal p img.social {border-radius:0.4em;margin:0 0 0.5em;}
#modal p a:link, #modal p a:visited {color:#6e6e6e;}
#modal p a:hover {text-decoration:underline;}
#modal a.crystal {}
/*#modal p.close {font-family:Verdana, sans-serif;font-size:5em;color:rgba(255,255,255,0.7);position:absolute;top:2%;right:-15%;}
#modal p.close:hover {color:rgba(255,255,255,1);}*/

#modal.show, #overlay.show{
	opacity: 1;
	visibility: visible;
}

#overlay {
	position: fixed;
	width: 100%;
	height: 100%;
	visibility: hidden;
	top: 0;
	left: 0;
	z-index: 9999;
	opacity: 0;
	background:#ffffff;
	-webkit-transition: all 0.3s;
	-moz-transition: all 0.3s;
	transition: all 0.3s;
	/*cursor:pointer;*/
}
#overlay a.close {width:4.8%;height:14%;display:block;position:absolute;z-index:2014;top:3%;right:1.8%;background:transparent;color:transparent;text-decoration:none;border:none;}
#overlay a.close img {width:100%;height:auto;margin:0;padding:0;}
.profiles-heading, .portfolio-heading
{
	margin-top: 4em;
}

.fade-text
{
	transition: all 2s;
	-webkit-transition: all 2s;
	-moz-transition: all 2s;
	text-align: center;
	position: absolute;
	width: 100%;
	top: 50px;
}

.fade-text h1
{
	font-size: 5.5em;
}

.fade-text.fadeIn
{
	opacity: 1;
}

.fade-text.fadeOut
{
	opacity: 0;
}

.portfolio-entries
{
	position: relative;
}

@media screen and (min-width:320px) and (max-width:600px) {
	.profiles #grid-wrapper .grid-item {height:260px !important;}
}